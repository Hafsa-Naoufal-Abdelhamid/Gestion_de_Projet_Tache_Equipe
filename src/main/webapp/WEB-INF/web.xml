<?xml version="1.0" encoding="UTF-8"?> 
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"  
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee  
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"  
         version="3.1">

    <display-name>Task Manager Web Application</display-name>

    <!-- Project Management Servlet -->
    <servlet>
        <servlet-name>ProjectServlet</servlet-name>
        <servlet-class>com.example.taskmanager.controller.ProjectServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProjectServlet</servlet-name>
        <url-pattern>/projects</url-pattern>
    </servlet-mapping>

    <!-- Task Management Servlet -->
    <servlet>
        <servlet-name>TaskServlet</servlet-name>
        <servlet-class>com.example.taskmanager.controller.TaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TaskServlet</servlet-name>
        <url-pattern>/tasks</url-pattern>
    </servlet-mapping>

    <!-- Team Management Servlet -->
    <servlet>
        <servlet-name>TeamServlet</servlet-name>
        <servlet-class>com.example.taskmanager.controller.TeamServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TeamServlet</servlet-name>
        <url-pattern>/teams</url-pattern>
    </servlet-mapping>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout> <!-- Timeout in minutes -->
    </session-config>

    <!-- Custom Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/views/error404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/views/error500.jsp</location>
    </error-page>

    <!-- Welcome Page -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
